<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="390dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:text="Register Page"
                android:textAlignment="center"
                android:textSize="30sp"
                tools:ignore="UnusedAttribute" />

            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:id="@+id/name_id"/>

            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ID"
                android:id="@+id/email_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:id="@+id/age_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sex"
                android:id="@+id/sex_id"/>

            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="number"
                android:digits="0123456789+"
                android:id="@+id/ph_no_id"/>



            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:id="@+id/pass_id"/>

            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:id="@+id/address_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Emergency Phone Number"
                android:digits="0123456789+"
                android:inputType="number"
                android:id="@+id/emo_no_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blood Group"
                android:id="@+id/blood_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medicine Intolerance"
                android:id="@+id/med_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="illness"
                android:id="@+id/illness_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MEdication"
                android:id="@+id/medication_id"/>
            <EditText
                style="@style/edittext_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Special"
                android:id="@+id/specia_id"/>


            <Button
                android:id="@+id/submit_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="60dp"
                android:background="#757575"
                android:onClick="sendData"
                android:text="SUBMIT" />


        </LinearLayout>


    </ScrollView>




</android.support.constraint.ConstraintLayout>