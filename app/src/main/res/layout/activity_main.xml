<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntryPointMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/final_frontpage"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/user_button"
            style="@style/Main_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingTop="220sp"
            android:paddingRight="220sp"
            android:text="User"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/ambulance_button"
            style="@style/Main_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="210sp"
            android:paddingRight="120sp"
            android:layout_weight="1"
            android:text="ambulance" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>